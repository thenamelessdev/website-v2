<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game - <%= room %></title>
    <link rel="stylesheet" href="/style.css">
    <link rel="shortcut icon" href="/logo" type="image/png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
    crossorigin="anonymous">
</head>
<body class="text-center">
    <h1>Welcome to lobby <%= room %></h1>
    <p>Host: <%= host %></p>
    <p>You: <%= you %></p>
    <p id="player">Player: <%= player %></p>
    <p>You are <%= role %></p>
    <br>

    <h3>Game:</h3>
    <p>-: empty, X: host, O: player</p>
    <br>

    <button id="a1" class="btn btn-success">-</button>
    <button id="a2" class="btn btn-success">-</button>
    <button id="a3" class="btn btn-success">-</button>
    <br>
    <button id="b1" class="btn btn-success">-</button>
    <button id="b2" class="btn btn-success">-</button>
    <button id="b3" class="btn btn-success">-</button>
    <br>
    <button id="c1" class="btn btn-success">-</button>
    <button id="c2" class="btn btn-success">-</button>
    <button id="c3" class="btn btn-success">-</button>
    <p id="turn">X's turn</p>
    <br>
    <p>Invite: <a href="https://thenamelessdev.com/projects/ttt/invite/<%= room %>" target="_blank">thenamelessdev.com/projects/ttt/invite/<%= room %></a></p>
    <br>
    <button id="resetBtn" class="btn btn-danger" disabled>Reset</button>
    <button id="deleteBtn" class="btn btn-danger" disabled>Delete</button>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const playerText = document.getElementById("player");
        let player = "<%= player %>"
        const you = "<%= you %>"
        const host = "<%= host %>"
        const room = "<%= room %>"
        const role = "<%= role %>";
        const cells = ["a1","a2","a3","b1","b2","b3","c1","c2","c3"];
        let turn = "X"

        if(you == host){
            document.getElementById("deleteBtn").disabled = false;
            document.getElementById("resetBtn").disabled = false;
        }


        function reset(){
            socket.emit("resetReq", ({ room: room }));
        }
        function del(){
            socket.emit("delete", ({ room: room }));
        };


        socket.on("delete", (data) => {
            location.href = "/error/Host deleted the room";
        });
        socket.on("connect", () => {
            socket.emit("room", "<%= room %>");
        });
        socket.on("reset", (data) => {
            if(data.room == room){
                cells.forEach(id => {
                    document.getElementById(id).textContent = "-";
                    document.getElementById(id).className = "btn btn-success";
                    document.getElementById(id).disabled = false;
                });
            }
        });
        socket.on("info", async (data) => {
            if(data.room == room)
            playerText.textContent = `Player: ${data.username}`;
            player = data.username;
        });
        socket.on("move", (data) => {
            const moveRoom = data.room;
            const move = data.move;
            const player = data.player;
            if (room == moveRoom){
                document.getElementById(move).textContent = player;
                document.getElementById(move).className = "btn btn-danger"
                document.getElementById(move).disabled = true;
                turn = data.turn;
                document.getElementById("turn").textContent = `${turn}'s turn`;
            }
        });

        document.getElementById("resetBtn").addEventListener("click", () => {
            reset();
        });
        document.getElementById("deleteBtn").addEventListener("click", () => {
            del();
        });

        setInterval(() => {
            fetch("/projects/ttt/turn", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    room: room
                })
            });
        }, 3000);
        socket.on("turn", (data) => {
            if (data.room == room){
                turn = data.turn;
            }
        });



        cells.forEach(move => {
            const cell = document.getElementById(move);

            cell.addEventListener("click", () => {
                if(cell.textContent === "-" && player != "none" && role == turn){
                    fetch("/projects/ttt/move", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({
                            room: room,
                            player: role,
                            move: move
                        })
                    });
                }
            });
        });
    </script>
</body>
</html>